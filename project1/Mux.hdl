/** 
 * Multiplexor:
 * out = a if sel == 0
 *       b otherwise
 */

CHIP Mux {
    IN a, b, sel;
    OUT out;

    PARTS:
    Nand(a=b, b=sel, out=nandBSel);
    Not(in=sel, out=notSel);
    Nand(a=a, b=notSel, out=nandASel);
    Nand(a=nandASel, b=nandBSel, out=out);
}